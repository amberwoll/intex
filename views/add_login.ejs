<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Login</title>
  <style>
    #suggestions {
      border: 1px solid #ccc;
      max-height: 150px;
      overflow-y: auto;
      position: absolute;
      background: white;
      width: 100%;
    }
    .suggestion {
      padding: 5px;
      cursor: pointer;
    }
    .suggestion:hover {
      background: #eee;
    }
  </style>
</head>
<body>
  <h1>Add Login</h1>
  <form action="/add_login" method="POST">
    <label for="volunteer_email">Volunteer Email:</label>
    <input
        type="text"
        id="volunteer_email"
        name="volunteer_email"
        value="<%= volunteerEmail || '' %>"
        readonly
        >
    <label for="role">Role:</label>
    <select id="role" name="role">
      <% roles.forEach(role => { %>
        <option value="<%= role.id %>"><%= role.name %></option>
      <% }); %>
    </select>
    <br>
    <label for="user_password">Password:</label>
    <button type="submit">Add Login</button>
  </form>
</body>
</html>
