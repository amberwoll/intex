<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Login</title>
  <style>
    table {
      width: 100%;
      margin: 20px auto;
      border-collapse: collapse;
      font-size: 14px;
    }
    th,
    td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
      line-height: 1.4;
    }
    th {
      background-color: #f9f9f9;
      font-weight: bold;
    }
    button {
      padding: 6px 12px;
      font-size: 14px;
      cursor: pointer;
      margin: 2px;
    }
    h1 {
      text-align: center;
      margin: 20px 0;
    }
    .form-buttons {
      display: flex;
      justify-content: center;
      margin: 20px 0;
    }
  </style>
</head>
<body>
  <h1>Add Login</h1>
  <form action="/add_login" method="POST">
    <label for="volunteer_email">Volunteer Email:</label>
    <input
        type="text"
        id="volunteer_email"
        name="volunteer_email"
        value="<%= volunteerEmail || '' %>"
        readonly
        >
    <label for="role">Role:</label>
    <form action="/login/<%= login.volunteer_email %>" method="POST">
        <select id="role_id" name="role_id">
          <% role.forEach(row => { %>
            <option 
              value="<%= row.role_id %>" 
              <%= row.position_title %>
            </option>
          <% }) %>
        </select>
        <button type="submit">Save</button>
      </form>   
    <br>
    <label for="user_password">Password:</label>
    <button type="submit">Add Login</button>
  </form>
</body>
</html>
