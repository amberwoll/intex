<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Volunteer Records</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }

      h1 {
        text-align: center;
        margin: 20px 0;
      }

      .button-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
      }

      button {
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        border: none;
        padding: 15px 30px;
        font-size: 18px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin: 0 10px;
      }

      button:hover {
        background-color: rgba(255, 255, 255, 0.7);
        color: black;
      }

      table {
        width: 100%;
        margin: 20px auto;
        border-collapse: collapse;
        font-size: 14px;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
        line-height: 1.4;
      }

      th {
        background-color: #f9f9f9;
        font-weight: bold;
      }

      .form-buttons {
        display: flex;
        justify-content: center;
        margin: 20px 0;
      }
    </style>
  </head>
  <body>
    <div class="button-bar">
      <form action="/admin_landing" method="GET">
        <button type="submit">Admin Main</button>
      </form>
      <form action="/requested_event" method="GET">
        <button type="submit">Requested Events</button>
      </form>
      <form action="/completed_events" method="GET">
        <button type="submit">Completed Events</button>
      </form>
      <form action="/volunteers" method="GET">
        <button type="submit">Volunteer Management</button>
      </form>
      <form action="/login" method="GET">
        <button type="submit">Edit User Accounts</button>
      </form>
    </div>
    <h1>Volunteer Records</h1>
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Sewing Level</th>
          <th>Phone</th>
          <th>Reference ID</th>
          <th>Number of Hours</th>
          <th>Email List</th>
          <th>Volunteer Email</th>
          <th>City</th>
          <th>Zip</th>
          <th>Preference</th>
          <th>Leadership</th>
          <th>Admin Access</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (volunteers.length > 0) { %> <% volunteers.forEach(volunteer => {
        %>
        <tr>
          <input type="hidden" value="volunteer.volunteer_id" />
          <td><%= volunteer.first_name %></td>
          <td><%= volunteer.last_name %></td>
          <td><%= volunteer.sewing_description %></td>
          <td><%= volunteer.phone %></td>
          <td><%= volunteer.reference_description %></td>
          <td><%= volunteer.number_of_hours %></td>
          <td><%= volunteer.email_list ? "Yes" : "No" %></td>
          <td><%= volunteer.volunteer_email %></td>
          <td><%= volunteer.city %></td>
          <td><%= volunteer.zip %></td>
          <td><%= volunteer.sewing_preference %></td>
          <td><%= volunteer.leadership ? "Yes" : "No" %></td>
          <td>
            <% if (volunteer.role_id) { %>
            <!-- Display the role if a role exists -->
            <span><%= volunteer.position %></span>
            <% } else { %>
            <!-- Otherwise, show the "Add Administrative Privileges" button -->
            <form action="/add_login" method="GET">
              <input
                type="hidden"
                name="volunteer_email"
                value="<%= volunteer.volunteer_email %>"
              />
              <button type="submit">Grant Access</button>
            </form>
            <% } %>
          </td>
          <td>
            <!-- Edit Button -->
            <form
              action="/editVolunteer/<%= volunteer.volunteer_id %>"
              method="GET"
              style="
                display: inline;
                background-color: rgba(0, 0, 0, 0.7);
                color: white;
                border: none;
                padding: 6px 12px;
                font-size: 14px;
                cursor: pointer;
                border-radius: 4px;
              "
            >
              <button type="submit">Edit</button>
            </form>
            <br /><br />
            <!-- Delete Button -->
            <form
              action="/deleteVolunteer/<%= volunteer.volunteer_email %>"
              method="POST"
              style="display: inline"
            >
              <button
                type="submit"
                aria-label="Delete Volunteer"
                onclick="return confirm('Are you sure you want to delete this volunteer? This action cannot be undone.');"
                style="
                  background-color: #e74c3c;
                  color: white;
                  border: none;
                  padding: 6px 12px;
                  font-size: 14px;
                  cursor: pointer;
                  border-radius: 4px;
                "
              >
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="14">No data available</td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <div class="form-buttons">
      <form action="/application" method="GET">
        <button type="submit">Add Volunteer</button>
      </form>
      <form action="/" method="GET">
        <button type="submit">Home</button>
      </form>
    </div>
  </body>
</html>
